<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <ListView
        android:id="@+id/listview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/cover"
        android:layout_toStartOf="@+id/cover"/>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/cover"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/no_cover"
        app:border_color="#EEEEEE"
        app:border_width="4dp"/>

    <ImageButton
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cover"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/play" />

    <ImageButton
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cover"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/pause"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/play"
        android:layout_alignLeft="@+id/cover"
        android:layout_alignStart="@+id/cover"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/previous"

        />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/play"
        android:layout_alignEnd="@+id/cover"
        android:layout_alignRight="@+id/cover"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/next" />

    <TextView
        android:id="@+id/currentDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekbar"
        android:layout_alignLeft="@+id/cover"
        android:layout_alignStart="@+id/cover"
        android:text="0.00"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/totalDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekbar"
        android:layout_alignEnd="@+id/cover"
        android:layout_alignRight="@+id/cover"
        android:text="0.00"
        android:textColor="@color/light_grey" />

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/next"
        android:layout_alignEnd="@+id/cover"
        android:layout_alignLeft="@+id/cover"
        android:layout_alignRight="@+id/cover"
        android:layout_alignStart="@+id/cover"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp" />


    
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="fitXY"
        android:id="@+id/voice_command"
        android:src="@drawable/no_voice_icon"
        android:layout_alignParentRight="true"/>
	
	<!-- 
   <ImageButton
       android:layout_width="32dp"
       android:layout_height="32dp"
       android:scaleType="fitXY"
       android:id="@+id/nightmode"
       android:src="@drawable/day"
       android:layout_below="@+id/dialog"
       android:layout_alignParentRight="true"/> 
   -->

    <RelativeLayout 
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/callLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameCall"
            android:layout_centerHorizontal="true"
            android:text="NAME FIRSTNAME"
            android:textSize="40sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/nameCall"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:scaleType="fitXY"
                android:id="@+id/callButton"
                android:src="@drawable/call"
                android:layout_gravity="center"
                android:layout_below="@+id/nameCall"/>

            <ImageButton
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:scaleType="fitXY"
                android:id="@+id/endCallButton"
                android:src="@drawable/endcall"
                android:layout_below="@+id/nameCall"
                android:layout_toRightOf="@+id/callButton"/>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>